{{> nav }}

<main>
    <h1 class="text-center">Robot Control</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <form>
                    <div class="form-group">
                        <label for="location-select">Location</label>
                        <select class="form-control" id="location-select">
                            <option value="tagusvalles">Tagus Valles</option>
                            <option value="lunar">Moon</option>
                            <option value="pluto">Pluto</option>
                            <option value="grid">Grid</option>
                        </select>
                        <label for="robot-select">Vehicle</label>
                        <select class="form-control" id="robot-select">
                            <option value="dragon">Dragon Car</option>
                            <option value="plane">Jetplane</option>
                            <option value="triangle">Triangle</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-dark" id="customize-btn">Customize!</button>
                    <hr>
                    {{#if isAuthenticated}}
                    <button class="btn btn-primary user-btn" id="save-btn">Save</button>
                    <button class="btn btn-primary user-btn" id="load-btn">Load</button>
                    {{/if}}
                </form>
            </div>
            <div class="col-md-8" id="canvasContainer">
                <canvas class="" id="robotCanvas"></canvas>
            </div>
            <div class="col-md-2">
                <section class="text-center p-2" id="controlPanel">
                    <h2 id="control-logo">Controls</h2>
                    <p>Use the buttons or arrow keys to make the rover move!</p>
                    <div id="buttons">
                        <button class="btn btn-dark direction-btn" id="up">&#8593;</button>
                        <br>
                        <button class="btn btn-dark direction-btn mr-3" id="left">&#8592;</button>
                        <button class="btn btn-dark direction-btn ml-3" id="right">&#8594;</button>
                        <br>
                        <button class="btn btn-dark direction-btn" id="down">&#8595;</button>

                    </div>
                </section>
            </div>
            {{!-- <div class="col-md-2"></div> --}}
        </div>
    </div>
</main>

{{> footer }}